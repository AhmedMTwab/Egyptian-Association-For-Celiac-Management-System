@model Clinic
<div style="
	 background: rgba(132, 134, 127, .5);
	 box-sizing: border-box;
	 box-shadow: 0 15px 25px rgba(0, 0, 0, .6);
	 border-radius: 10px;">
	<table class="table table-border">
		<thead>
			<tr itemscope="raw">
				<th itemscope="col">Clinic Id</th>
				<th itemscope="col">Clinic Name</th>
				<th itemscope="col">Open Time</th>
				<th itemscope="col">Close Time</th>
				<th itemscope="col">PhoneNumbers</th>
				<th itemscope="col">Address</th>
				<th itemscope="col">AssosiationDiscound</th>
				<th itemscope="col">InsuranceDiscound</th>
			</tr>
		</thead>
		<tbody>
			
				<tr itemscope="raw">
					<td>
						@Model.ClinicId
					</td>

					<td>
					@Model.Name
					</td>

					<td>
					@Model.OpenTime
					</td>

					<td>
					@Model.CloseTime
					</td>
					<td>
						@foreach (var phone in @Model.clinicphones)
						{
							<p>
								@phone.PhoneNumber
							</p>
						}
					</td>
					<td>
						@foreach (var address in @Model.clinicaddreses)
						{
							<p>
								@address.Address
							</p>
						}
					</td>
					<td>
						@foreach (var branch in @Model.branches)
						{
							<p>
								@branch.Assosiation.Address
							</p>
							<p>
								@branch.DiscountPrecentage
							</p>
						}
					</td>
					<td>
						@foreach (var insurance in @Model.insurences)
						{
							<p>
								@insurance.Insurance.Name
							</p>

							<p>
								@insurance.DiscountPrecentage
							</p>
						}
					</td>
					<td>
						<a asp-action="Details" asp-controller="Clinic" asp-route-Id="@Model.ClinicId">Details</a>
					</td>

					<td>
						<a asp-action="EditClinic" asp-controller="Clinic" asp-route-Id="@Model.ClinicId">Edit</a>
					</td>
					<td>
						<a asp-action="DeleteClinic" asp-controller="Clinic" asp-route-Id="@Model.ClinicId">Delete</a>
					</td>
				</tr>

			
		</tbody>
	</table>
</div>