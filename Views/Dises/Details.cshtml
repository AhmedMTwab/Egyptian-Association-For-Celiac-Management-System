@model Dises
<div style="
	 background: rgba(132, 134, 127, .5);
	 box-sizing: border-box;
	 box-shadow: 0 15px 25px rgba(0, 0, 0, .6);
	 border-radius: 10px;">
	<table class="table table-border">
		<thead>
			<tr itemscope="raw">
				<th itemscope="col">Disease Id</th>
				<th itemscope="col">Disease Name</th>
				<th itemscope="col">Edit</th>
				<th itemscope="col">Delete</th>
			</tr>
		</thead>
		<tbody>
			<tr itemscope="raw">
				<td>
					@Model.DisesId
				</td>

				<td>
					@Model.Name
				</td>
				<td>
					<a asp-action="Editdises" asp-controller="Dises" asp-route-Id="@Model.DisesId">Edit</a>
				</td>
				<td>
					<a asp-action="Deletedises" asp-controller="Dises" asp-route-Id="@Model.DisesId">Delete</a>
				</td>
			</tr>


		</tbody>
	</table>
</div>