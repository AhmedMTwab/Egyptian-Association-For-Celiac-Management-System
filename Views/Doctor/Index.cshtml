@model IEnumerable<Doctor>
<div style="
	 background: rgba(132, 134, 127, .5);
	 box-sizing: border-box;
	 box-shadow: 0 15px 25px rgba(0, 0, 0, .6);
	 border-radius: 10px;">

	<div class="clo-6 text-end">
		<a asp-controller="Doctor" asp-action="AddDoctor" class="btn btn-primary">Add New Doctor</a>
	</div>

	<table class="table table-border">
		<thead>
			<tr itemscope="raw">
				<th itemscope="col">Doctor Id</th>
				<th itemscope="col">Doctor Name</th>
				<th itemscope="col">Major</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr itemscope="raw">
					<td>
						@item.DoctorId
					</td>

					<td>
						@item.Name
					</td>

					<td>
						@item.Major
					</td>

					
					<td>
						<a asp-action="Details" asp-controller="Doctor" asp-route-Id="@item.DoctorId">Details</a>
					</td>

					<td>
						<a asp-action="EditDoctor" asp-controller="Doctor" asp-route-Id="@item.DoctorId">Edit</a>
					</td>
					<td>
						<a asp-action="DeleteDoctor" asp-controller="Doctor" asp-route-Id="@item.DoctorId">Delete</a>
					</td>
				</tr>

			}
		</tbody>
	</table>
</div>