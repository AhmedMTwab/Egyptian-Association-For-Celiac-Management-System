@model Hospital
<div style="
	 background: rgba(132, 134, 127, .5);
	 box-sizing: border-box;
	 box-shadow: 0 15px 25px rgba(0, 0, 0, .6);
	 border-radius: 10px;">
	<table class="table table-border">
		<thead>
			<tr itemscope="raw">
				<th itemscope="col">Hospital Id</th>
				<th itemscope="col">Hospital Name</th>
				<th itemscope="col">Type</th>
				<th itemscope="col">PhoneNumbers</th>
				<th itemscope="col">Address</th>
				<th itemscope="col">InsuranceDiscound</th>
			</tr>
		</thead>
		<tbody>

			<tr itemscope="raw">
				<td>
					@Model.HospitalId
				</td>

				<td>
					@Model.Name
				</td>
				<td>
					@foreach(var type in Model.types)
					{
						<p>
							@type.Type
						</p>
					}
				</td>
				
				<td>
					@foreach (var phone in @Model.PhoneNumbers)
					{
						<p>
							@phone.PhoneNumber
						</p>
					}
				</td>
				<td>
					@foreach (var address in @Model.addresses)
					{
						<p>
							@address.Address
						</p>
					}
				</td>
				
				<td>
					@foreach (var insurance in @Model.insurances)
					{
						<p>
							@insurance.Insurance.Name
						</p>

						<p>
							@insurance.DiscountPrecentage
						</p>
					}
				</td>

				<td>
					<a asp-action="EditHospital" asp-controller="Hospital" asp-route-Id="@Model.HospitalId">Edit</a>
				</td>
				<td>
					<a asp-action="DeleteHospital" asp-controller="Hospital" asp-route-Id="@Model.HospitalId">Delete</a>
				</td>
			</tr>


		</tbody>
	</table>
</div>