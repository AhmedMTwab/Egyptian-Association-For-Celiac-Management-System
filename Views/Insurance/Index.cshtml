@model IEnumerable<HealthInsurance>
<div style="
	 background: rgba(132, 134, 127, .5);
	 box-sizing: border-box;
	 box-shadow: 0 15px 25px rgba(0, 0, 0, .6);
	 border-radius: 10px;">

	<div class="clo-6 text-end">
		<a asp-controller="Insurance" asp-action="AddInsurance" class="btn btn-primary">Add New Insurance</a>
	</div>

	<table class="table table-border">
		<thead>
			<tr itemscope="raw">
				<th itemscope="col">Insurance Id</th>
				<th itemscope="col">Insurance Name</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr itemscope="raw">
					<td>
						@item.InsuranceId
					</td>

					<td>
						@item.Name
					</td>
					<td>
						<a asp-action="Details" asp-controller="Insurance" asp-route-Id="@item.InsuranceId">Details</a>
					</td>

					<td>
						<a asp-action="EditInsurance" asp-controller="Insurance" asp-route-Id="@item.InsuranceId">Edit</a>
					</td>
					<td>
						<a asp-action="DeleteInsurance" asp-controller="Insurance" asp-route-Id="@item.InsuranceId">Delete</a>
					</td>
				</tr>

			}
		</tbody>
	</table>
</div>