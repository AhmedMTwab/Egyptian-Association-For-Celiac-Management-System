@model IEnumerable<Lab>
<div style="
	 background: rgba(132, 134, 127, .5);
	 box-sizing: border-box;
	 box-shadow: 0 15px 25px rgba(0, 0, 0, .6);
	 border-radius: 10px;">

	<div class="clo-6 text-end">
		<a asp-controller="Lab" asp-action="AddLab" class="btn btn-primary">Add New Lab</a>
	</div>

	<table class="table table-border">
		<thead>
			<tr itemscope="raw">
				<th itemscope="col">Lab Id</th>
				<th itemscope="col">Lab Name</th>
				<th itemscope="col">Open Time</th>
				<th itemscope="col">Close Time</th>
				
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr itemscope="raw">
					<td>
						@item.LabId
					</td>

					<td>
						@item.Name
					</td>

					<td>
						@item.OpenTime
					</td>

					<td>
						@item.CloseTime
					</td>

					<td>
						<a asp-action="Details" asp-controller="Lab" asp-route-Id="@item.LabId">Details</a>
					</td>

					<td>
						<a asp-action="EditLab" asp-controller="Lab" asp-route-Id="@item.LabId">Edit</a>
					</td>
					<td>
						<a asp-action="DeleteLab" asp-controller="Lab" asp-route-Id="@item.LabId">Delete</a>
					</td>
				</tr>

			}
		</tbody>
	</table>
</div>