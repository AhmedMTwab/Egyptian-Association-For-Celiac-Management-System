@model IEnumerable<Order>
<div style="
	 background: rgba(132, 134, 127, .5);
	 box-sizing: border-box;
	 box-shadow: 0 15px 25px rgba(0, 0, 0, .6);
	 border-radius: 10px;">


	<table class="table table-border">
		<thead>
			<tr itemscope="raw">
				@* <th itemscope="col">Order Image</th> *@
				<th itemscope="col">Order Id</th>
				<th itemscope="col">Patient Id</th>
				<th itemscope="col">Details</th>
				<th itemscope="col">Price</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr itemscope="raw">
					<td>
						@item.OrderId
					</td>
					<td>
						@item.PatientId
					</td>

					<td>
						@item.OrderDetails
					</td>

					<td>
						@item.TotalCost
					</td>
					<td>
						<a asp-action="Details" asp-controller="Order" asp-route-Id="@item.OrderId">Details</a>
					</td>

				</tr>

			}
		</tbody>
	</table>
</div>