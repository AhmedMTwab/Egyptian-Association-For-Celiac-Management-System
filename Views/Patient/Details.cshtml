@model Patient
<div style="
	 background: rgba(132, 134, 127, .5);
	 box-sizing: border-box;
	 box-shadow: 0 15px 25px rgba(0, 0, 0, .6);
	 border-radius: 10px;">
	<table class="table table-border">
		<thead>
			<tr itemscope="raw">
				<th itemscope="col">Patient Id</th>
				<th itemscope="col">Patient Name</th>
				<th itemscope="col">Date Of Birth</th>
				<th itemscope="col">ssn</th>
				<th itemscope="col">Blood Type</th>
				<th itemscope="col">Assosiation Branch</th>
				<th itemscope="col">Disses</th>
				<th itemscope="col">Addresses</th>
				<th itemscope="col">Phonenumbers</th>
				<th itemscope="col">Medical Tests</th>
				<th itemscope="col">Edit</th>
				<th itemscope="col">Delete</th>
			</tr>
		</thead>
		<tbody>
				<tr itemscope="raw">
					<td>
						@Model.PatientId
					</td>

					<td>
						@Model.PatientName
					</td>

					<td>
						@Model.Dob
					</td>

					<td>
					@Model.Ssn
					</td>

					<td>
					@Model.PatientBloodtype
					</td>
					<td>
					@Model.Assosiation.Address
					</td>
					<td>
						@foreach (var disses in @Model.Diseses)
						{
							<p>
								@disses.Dises.Name
							</p>
						}
					</td>
					<td>
						@foreach(var address in @Model.Addresses)
						{
								<p>
									@address.Address
								</p>
						}
			        </td>
					<td>
						@foreach (var phone in @Model.PhoneNumbers)
						{
							<p>
								@phone.PhoneNumber
							</p>
						}
					</td>
					<td>
					<a href="~/medical records/@Model.Medicalrecords.First().Tests.First().TestsPath">Download</a>
					</td>
				<td>
					<a asp-action="Editpatient" asp-controller="Patient" asp-route-Id="@Model.PatientId">Edit</a>
				</td>
				<td>
					<a asp-action="Deletepatient" asp-controller="Patient" asp-route-Id="@Model.PatientId">Delete</a>
				</td>
				</tr>

			
		</tbody>
	</table>
</div>