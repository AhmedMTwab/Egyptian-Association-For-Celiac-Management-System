@model IEnumerable<Patient>
<div style="
	 background: rgba(132, 134, 127, .5);
	 box-sizing: border-box;
	 box-shadow: 0 15px 25px rgba(0, 0, 0, .6);
	 border-radius: 10px;">

	<div class="clo-6 text-end">
		<a asp-controller="Patient" asp-action="AddPatient" class="btn btn-primary">Add New Patient</a>
	</div>

	<table class="table table-border">
		<thead>
			<tr itemscope="raw">
				<th itemscope="col">Patient Id</th>
				<th itemscope="col">Patient Name</th>
				<th itemscope="col">Date Of Birth</th>
				<th itemscope="col">ssn</th>
				<th itemscope="col">Blood Type</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr itemscope="raw">
					<td>
						@item.PatientId
					</td>

					<td>
						@item.PatientName
					</td>

					<td>
						@item.Dob
					</td>

					<td>
						@item.Ssn
					</td>

					<td>
						@item.PatientBloodtype
					</td>
					<td>
						<a asp-action="Details" asp-controller="Patient" asp-route-Id="@item.PatientId">Details</a>
					</td>

					<td>
						<a asp-action="Editpatient" asp-controller="Patient" asp-route-Id="@item.PatientId">Edit</a>
					</td>
					<td>
						<a asp-action="Deletepatient" asp-controller="Patient" asp-route-Id="@item.PatientId">Delete</a>
					</td>
				</tr>

			}
		</tbody>
	</table>
</div>