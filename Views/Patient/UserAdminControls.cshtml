@model PatientViewModel
@{
    <link rel="stylesheet" href="~/css/UserAdmin.css">
    <title>User Admin</title>
    Layout = null;
}
<div class="patient-box">
    <h2>Patient</h2>
    <form asp-action="Addpatient" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="user-box">
            <input asp-for="PatientName" type="text" />
            <span asp-validation-for="PatientName" class="text-danger"></span>
            <label>patientName</label>
        </div>
        <div class="user-box date">
            <input type="date" asp-for="Dob" name="" required="">
            <span asp-validation-for="Dob" class="text-danger"></span>
            <label>Date Of Birth</label>

        </div>
        <div class="user-box">
            <input type="" asp-for="PatientPhone">
            <span asp-validation-for="PatientPhone" class="text-danger"></span>
            <label>Phone Number</label>

        </div>
        <div class="user-box">
            <input type="" asp-for="PatientAddress" >
            <span asp-validation-for="PatientAddress" class="text-danger"></span>
            <label>Address</label>
           

        </div>
        <div class="user-box">
            <input type="" asp-for="Ssn">
            <span asp-validation-for="Ssn" class="text-danger"></span>
            <label>National Number</label>
            

        </div>
        @* <div class="user-box">
            <input type="file" name="" required="">
        </div> *@
        <div class="user-box">
            <label class="license">Blood Type</label>
            <select asp-for="PatientBloodType">
                <option>A+</option>
                <option>A-</option>
                <option>AB+</option>
                <option>AB-</option>
                <option>B+</option>
                <option>B-</option>
                <option>O+</option>
                <option>O-</option>
            </select>
            <span asp-validation-for="PatientBloodType" class="text-danger"></span>

        </div>
        <button type="submit" id="patient">
            <span></span>
            <span></span>
            <span></span>
            <span></span> Add A Patient
        </button>

    </form>
</div>

