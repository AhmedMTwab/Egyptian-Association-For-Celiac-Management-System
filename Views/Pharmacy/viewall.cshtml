@model IEnumerable<Pharmacy>
<div style="
	 background: rgba(132, 134, 127, .5);
	 box-sizing: border-box;
	 box-shadow: 0 15px 25px rgba(0, 0, 0, .6);
	 border-radius: 10px;">
	<table class="table table-border">
		<thead>
			<tr itemscope="raw">
				<th itemscope="col">Pharmacy Id</th>
				<th itemscope="col">Pharmacy Name</th>
				<th itemscope="col">Open Time</th>
				<th itemscope="col">Close Time</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr itemscope="raw">
					<td>
						@item.pharmacyId
					</td>

					<td>
						@item.Name
					</td>

					<td>
						@item.OpenTime
					</td>

					<td>
						@item.CloseTime
					</td>

					<td>
						<a asp-action="viewone" asp-controller="Pharmacy" asp-route-Id="@item.pharmacyId">Details</a>
					</td>

					<td>
						<a asp-action="EditPharmacy" asp-controller="Pharmacy" asp-route-Id="@item.pharmacyId">Edit</a>
					</td>
					<td>
						<a asp-action="DeletePharmacy" asp-controller="Pharmacy" asp-route-Id="@item.pharmacyId">Delete</a>
					</td>
				</tr>

			}
		</tbody>
	</table>
</div>