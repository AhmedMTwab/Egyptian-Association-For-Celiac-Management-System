@model Pharmacy
<div style="
	 background: rgba(132, 134, 127, .5);
	 box-sizing: border-box;
	 box-shadow: 0 15px 25px rgba(0, 0, 0, .6);
	 border-radius: 10px;">
	<table class="table table-border">
		<thead>
			<tr itemscope="raw">
				<th itemscope="col">Pharmacy Id</th>
				<th itemscope="col">Pharmacy Name</th>
				<th itemscope="col">Open Time</th>
				<th itemscope="col">Close Time</th>
				<th itemscope="col">PhoneNumbers</th>
				<th itemscope="col">Address</th>
				<th itemscope="col">AssosiationDiscound</th>
				<th itemscope="col">InsuranceDiscound</th>
			</tr>
		</thead>
		<tbody>

			<tr itemscope="raw">
				<td>
					@Model.pharmacyId
				</td>

				<td>
					@Model.Name
				</td>

				<td>
					@Model.OpenTime
				</td>

				<td>
					@Model.CloseTime
				</td>
				<td>
					@foreach (var phone in @Model.PhoneNumbers)
					{
						<p>
							@phone.PhoneNumber
						</p>
					}
				</td>
				<td>
					@foreach (var address in @Model.addresses)
					{
						<p>
							@address.Address
						</p>
					}
				</td>
				<td>
					@foreach (var branch in @Model.AssosiationBranches)
					{
						<p>
							@branch.Assosiation.Address
						</p>
						<p>
							@branch.DiscountPrecentage
						</p>
					}
				</td>
				<td>
					@foreach (var insurance in @Model.insurances)
					{
						<p>
							@insurance.Insurance.Name
						</p>

						<p>
							@insurance.DiscountPrecentage
						</p>
					}
				</td>

				<td>
					<a asp-action="EditPharmacy" asp-controller="Pharmacy" asp-route-Id="@Model.pharmacyId">Edit</a>
				</td>
				<td>
					<a asp-action="DeletePharmacy" asp-controller="Pharmacy" asp-route-Id="@Model.pharmacyId">Delete</a>
				</td>
			</tr>


		</tbody>
	</table>
</div>