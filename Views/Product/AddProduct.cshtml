@model AddProductViewModel
@{
    <link rel="stylesheet" href="~/css/UserAdmin.css">
    <title>Store Admin</title>
    Layout = null;
}
<div class="patient-box">
    <h2>Product</h2>
    <form asp-action="AddProduct" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="user-box">
            <input asp-for="Name" type="text" />
            <span asp-validation-for="Name" class="text-danger"></span>
            <label>Product Name</label>
        </div>

        <div class="user-box date">
            <input type="text"  asp-for="Details">
            <span asp-validation-for="Details" class="text-danger"></span>
            <label>Details</label>
        </div>
      
        <div class="user-box">
            <input type="number" asp-for="Price">
            <span asp-validation-for="Price" class="text-danger"></span>
            <label>Price</label>
        </div>

        <div class="user-box">
            <input type="file" asp-for="Product_Image" onchange="loadFile(event)" accept="image /*" />
            <img id="myImg" height="400" width="400" style="margin-left:100" />
            <span asp-validation-for="Product_Image" class="text-danger"></span>
            <label>Product Image</label>
        </div>
        
        
        <button type="submit" id="patient">
            <span></span>
            <span></span>
            <span></span>
            <span></span> Add A Product
        </button>

    </form>

</div>

<script>
    var loadFile = function (event) {
        var reader = new FileReader();
        reader.onload = function () {
            var myImg = document.getElementById('myImg');
            myImg.src = reader.result;
        }
        reader.readAsDataURL(event.target.files[0]);
    }
</script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

