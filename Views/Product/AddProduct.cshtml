@model AddProductViewModel
@{
    //<link rel="stylesheet" href="~/css/useradmin.css">
        //<link rel="stylesheet" href="/css/Forms.css" />
    <title>Store Admin</title>
    Layout = null;
}
<html>
    <body>
    <div class="product-box">
        <h2>Product</h2>
        <form asp-action="AddProduct" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="user-box">
                <input asp-for="Name" type="text" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <label>Product Name</label>
            </div>

            <div class="user-box date">
                <input type="text" asp-for="Details">
                <span asp-validation-for="Details" class="text-danger"></span>
                <label>Details</label>
            </div>

            <div class="user-box">
                <input type="number" asp-for="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
                <label>Price</label>
            </div>

            <div class="user-box">
                <input type="file" asp-for="Product_Image" onchange="loadFile(event)" accept="image /*" />
                <img id="myImg" height="400" width="400" style="margin-left:100" />
                <span asp-validation-for="Product_Image" class="text-danger"></span>
                <label>Product Image</label>
            </div>


            <button type="submit" id="patient">
                <span></span>
                <span></span>
                <span></span>
                <span></span> Add A Product
            </button>

        </form>

    </div>
    </body>
</html>

<style>
    html {
        height: 100%;
    }

    body {
        background-image: url(5555.jpg);
        background-repeat: no-repeat;
        background-position: center;
        background-attachment: fixed;
        background-size: cover;
    }

    .product-box {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 400px;
        padding: 40px;
        transform: translate(-50%, -50%);
        background: rgba(0, 0, 0, .5);
        box-sizing: border-box;
        box-shadow: 0 15px 25px rgba(0, 0, 0, .6);
        border-radius: 10px;
    }

    .delete-item {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 300px;
    }

    .update-item {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 400px;
    }

    .product-box h2 {
        margin: 0 0 30px;
        padding: 0;
        color: #fff;
        text-align: center;
    }

    .product-box .user-box {
        position: relative;
    }

        .product-box .user-box input {
            width: 100%;
            padding: 10px 0;
            font-size: 16px;
            color: #fff;
            margin-bottom: 30px;
            border: none;
            border-bottom: 1px solid #fff;
            outline: none;
            background: transparent;
        }

    .product-box .add {
        width: 100%;
        padding: 10px 0;
        font-size: 16px;
        color: #fff;
        margin-bottom: 0px;
        border: none;
        border-bottom: 1px solid #fff;
        outline: none;
        background: transparent;
    }

    .product-box .user-box label {
        position: absolute;
        top: 0;
        left: 0;
        padding: 10px 0;
        font-size: 16px;
        color: #fff;
        pointer-events: none;
        transition: .5s;
    }

    .product-box .user-box .photo {
        position: absolute;
        top: 0;
        left: 0;
        font-size: 16px;
        color: #fff;
        pointer-events: none;
        transition: .5s;
    }

    .product-box .user-box input:focus ~ label,
    .product-box .user-box input:valid ~ label {
        top: -20px;
        left: 0;
        color: #03e9f4;
        font-size: 12px;
    }

    .product-box form a {
        position: relative;
        display: inline-block;
        padding: 10px 5px;
        color: #03e9f4;
        font-size: 16px;
        text-decoration: none;
        text-transform: uppercase;
        overflow: hidden;
        transition: .5s;
        margin-top: 10px;
        letter-spacing: 4px
    }

    .product-box form #add {
        margin-left: 120px;
    }

    .update-item form #update {
        margin-left: 50px;
    }

    .delete-item form #delete {
        margin-left: 60px;
    }

    .product-box a:hover {
        background: #03e9f4;
        color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 5px #03e9f4, 0 0 25px #03e9f4, 0 0 50px #03e9f4, 0 0 100px #03e9f4;
    }

    .product-box a span {
        position: absolute;
        display: block;
    }

        .product-box a span:nth-child(1) {
            top: 0;
            left: -100%;
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, transparent, #03e9f4);
            animation: btn-anim1 1s linear infinite;
        }

</style>


<script>
    var loadFile = function (event) {
        var reader = new FileReader();
        reader.onload = function () {
            var myImg = document.getElementById('myImg');
            myImg.src = reader.result;
        }
        reader.readAsDataURL(event.target.files[0]);
    }
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}