@model IEnumerable<Reservation>
<div style="
	 background: rgba(132, 134, 127, .5);
	 box-sizing: border-box;
	 box-shadow: 0 15px 25px rgba(0, 0, 0, .6);
	 border-radius: 10px;">


	<table class="table table-border">
		<thead>
			<tr itemscope="raw">
				@* <th itemscope="col">Reservation Image</th> *@
				<th itemscope="col">Reservation Id</th>
				<th itemscope="col">Patient Id</th>
				<th itemscope="col">Reservation Date</th>
				<th itemscope="col">Reservation Time</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr itemscope="raw">
					<td>
						@item.ReservationId
					</td>

					<td>
						@item.PatientId
					</td>

					<td>
						@item.ReservationDate
					</td>

					<td>
						@item.ReservationTime
					</td>
					<td>
						<a asp-action="Details" asp-controller="Reservation" asp-route-Id="@item.ReservationId">Details</a>
					</td>

				</tr>

			}
		</tbody>
	</table>
</div>