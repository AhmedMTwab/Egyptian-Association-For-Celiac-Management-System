<style>
    :root {
        --primary-color: #008000;
        --secondary-color: #8b4513;
        --accent-color: #006400;
        --text-color: #1f2937;
        --bg-color: #f8fafc;
        --nav-bg: #ffffff;
        --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease;
    }

    .logo-container {
        display: flex;
        align-items: center;
        margin-right: 2rem;
        min-height: 40px;
        position: relative;
    }

    .navbar-brand {
        display: flex;
        align-items: center;
        gap: 1rem;
        text-decoration: none;
        color: var(--text-color);
        font-weight: 600;
    }

    .logo-img {
        width: 40px;
        height: 40px;
        object-fit: contain;
        border-radius: 4px;
        transition: transform 0.2s ease;
    }

    .navbar-brand:hover .logo-img {
        transform: scale(1.1);
    }

    .logo-text {
        font-size: 1.2rem;
        color: var(--primary-color);
        font-weight: 600;
        letter-spacing: -0.5px;
    }

    @@media (max-width: 768px) {
        .logo-text {
            display: none;
        }
    }

    body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        background-color: var(--bg-color);
        color: var(--text-color);
        line-height: 1.6;
        position: relative;
    }



    header {
        background-color: var(--nav-bg);
        padding: 0.5rem 0;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        box-shadow: var(--shadow-sm);
        will-change: transform;
        transform: translateZ(0);
        -webkit-transform: translateZ(0);
        backface-visibility: hidden;
        -webkit-backface-visibility: hidden;
    }

    header:hover {
        box-shadow: var(--shadow-md);
    }

    .nav-bar {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: transparent;
        gap: 1rem;
    }

    .nav-bar li {
        position: relative;
    }

    .nav-bar a {
        display: flex;
        align-items: center;
        color: var(--text-color);
        padding: 0.75rem 1.25rem;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.95rem;
        border-radius: 0.5rem;
        transition: var(--transition);
    }

    .nav-bar a:hover {
        background-color: var(--accent-color);
        color: white;
        transform: translateY(-1px);
    }

    .dropdown .dropbtn {
        cursor: pointer;
        background: none;
        border: none;
        font-family: inherit;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: white;
        min-width: 200px;
        box-shadow: var(--shadow-md);
        border-radius: 0.5rem;
        overflow: hidden;
        top: 100%;
        left: 0;
        opacity: 0;
        transform: translateY(10px);
        transition: var(--transition);
    }

    .dropdown-content a {
        padding: 0.75rem 1.25rem;
        color: var(--text-color);
        font-weight: 400;
        border-radius: 0;
    }

    .dropdown-content a:hover {
        background-color: var(--accent-color);
        color: white;
        transform: none;
    }

    .dropdown:hover .dropdown-content {
        display: block;
        opacity: 1;
        transform: translateY(0);
    }

    main {
        min-height: calc(100vh - 150px);
        padding: 2rem 0;
        background-color: var(--bg-color);
        margin-top: 65px;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .nav-bar {
            flex-direction: column;
            align-items: stretch;
            padding: 1rem;
        }

        .dropdown-content {
            position: static;
            box-shadow: none;
            border-radius: 0;
            background-color: #f8fafc;
        }

        .nav-bar a {
            padding: 0.5rem 1rem;
        }
    }

    /* Animation for dropdown items */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .dropdown-content a {
        animation: fadeIn 0.2s ease-out forwards;
    }

    /* Improve login partial styling */
    .navbar-nav {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .navbar-nav a {
        color: var(--text-color);
        text-decoration: none;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        transition: var(--transition);
    }

    .navbar-nav a:hover {
        background-color: var(--accent-color);
        color: white;
    }

    /* Add icons to nav items */
    .nav-bar a::before {
        font-family: "Font Awesome 6 Free";
        font-weight: 900;
        margin-right: 0.5rem;
    }

    .nav-bar a[asp-controller="Home"]::before {
        content: "\f015";
    }

    .nav-bar .dropbtn[href="#"]::before {
        content: "\f0c9";
    }

    .nav-bar a[asp-controller="Dises"]::before {
        content: "\f469";
    }

    .nav-bar a[asp-controller="Roles"]::before {
        content: "\f509";
    }
</style>